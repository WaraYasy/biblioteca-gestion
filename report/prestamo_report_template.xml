<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_prestamo">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Título del comprobante -->
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h1>Comprobante de Préstamo</h1>
                            <h3>Biblioteca Calíope</h3>
                        </div>

                        <!-- Información del libro -->
                        <div style="margin-top: 20px;">
                            <h4>Información del Libro</h4>
                            <table class="table table-bordered" style="width: 100%;">
                                <tr>
                                    <th style="width: 30%;">Título</th>
                                    <td><span t-field="doc.libro_id.titulo"/></td>
                                </tr>
                                <tr>
                                    <th>Autor</th>
                                    <td>
                                        <t t-if="doc.libro_id.autor_id">
                                            <span t-field="doc.libro_id.autor_id.nombre_y_apellidos"/>
                                        </t>
                                        <t t-else="">Sin autor</t>
                                    </td>
                                </tr>
                                <tr>
                                    <th>ISBN</th>
                                    <td><span t-field="doc.libro_id.isbn"/></td>
                                </tr>
                                <tr>
                                    <th>Editorial</th>
                                    <td>
                                        <t t-if="doc.libro_id.editorial">
                                            <span t-field="doc.libro_id.editorial"/>
                                        </t>
                                        <t t-else="">No especificada</t>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Información del usuario -->
                        <div style="margin-top: 20px;">
                            <h4>Información del Usuario</h4>
                            <table class="table table-bordered" style="width: 100%;">
                                <tr>
                                    <th style="width: 30%;">Nombre</th>
                                    <td><span t-field="doc.usuario_id.name"/></td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>
                                        <t t-if="doc.usuario_id.email">
                                            <span t-field="doc.usuario_id.email"/>
                                        </t>
                                        <t t-else="">No especificado</t>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Información del préstamo -->
                        <div style="margin-top: 20px;">
                            <h4>Detalles del Préstamo</h4>
                            <table class="table table-bordered" style="width: 100%;">
                                <tr>
                                    <th style="width: 30%;">Fecha de Préstamo</th>
                                    <td><span t-field="doc.fecha_prestamo"/></td>
                                </tr>
                                <tr>
                                    <th>Fecha de Devolución</th>
                                    <td><span t-field="doc.fecha_devolucion"/></td>
                                </tr>
                                <tr>
                                    <th>Estado</th>
                                    <td><span t-field="doc.estado"/></td>
                                </tr>
                                <t t-if="doc.multa and doc.multa > 0">
                                    <tr>
                                        <th>Multa</th>
                                        <td><span t-field="doc.multa"/> €</td>
                                    </tr>
                                </t>
                            </table>
                        </div>

                        <!-- Firma -->
                        <div style="margin-top: 40px;">
                            <table style="width: 100%;">
                                <tr>
                                    <td style="width: 50%; text-align: center;">
                                        <p>_____________________________</p>
                                        <p>Firma del Bibliotecario</p>
                                    </td>
                                    <td style="width: 50%; text-align: center;">
                                        <p>_____________________________</p>
                                        <p>Firma del Usuario</p>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Pie de página -->
                        <div style="margin-top: 20px; text-align: center;">
                            <small>Documento generado automáticamente</small>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
