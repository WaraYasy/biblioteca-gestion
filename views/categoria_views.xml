<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ===================== -->
        <!-- VISTA ÁRBOL (TREE)    -->
        <!-- ===================== -->
        <record id="view_categoria_tree" model="ir.ui.view">
            <field name="name">libro.categoria.tree</field>
            <field name="model">libro.categoria</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ubicacion"/>
                    <field name="cantidad_libros"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>

        <!-- ===================== -->
        <!-- VISTA FORMULARIO      -->
        <!-- ===================== -->
        <record id="view_categoria_form" model="ir.ui.view">
            <field name="name">libro.categoria.form</field>
            <field name="model">libro.categoria</field>
            <field name="arch" type="xml">
                <form string="Categoría">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre de la categoría"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Información">
                                <field name="ubicacion" placeholder="Ej: Planta baja, Pasillo 3"/>
                                <field name="color" widget="color_picker"/>
                            </group>
                            <group string="Estadísticas">
                                <field name="cantidad_libros"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripción">
                                <field name="descripcion" placeholder="Descripción de la categoría..."/>
                            </page>
                            <page string="Libros en esta categoría">
                                <field name="libro_ids">
                                    <tree>
                                        <field name="titulo"/>
                                        <field name="autor_id"/>
                                        <field name="genero"/>
                                        <field name="disponible"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ===================== -->
        <!-- VISTA KANBAN          -->
        <!-- ===================== -->
        <record id="view_categoria_kanban" model="ir.ui.view">
            <field name="name">libro.categoria.kanban</field>
            <field name="model">libro.categoria</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="ubicacion"/>
                    <field name="cantidad_libros"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click"
                                 t-attf-style="border-left: 4px solid #{kanban_color(record.color.raw_value)};">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <span t-if="record.ubicacion.value">
                                            <i class="fa fa-map-marker"/> <field name="ubicacion"/>
                                        </span>
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge bg-primary">
                                            <field name="cantidad_libros"/> libros
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ===================== -->
        <!-- ACCIÓN                -->
        <!-- ===================== -->
        <record id="action_categoria" model="ir.actions.act_window">
            <field name="name">Categorías</field>
            <field name="res_model">libro.categoria</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primera categoría
                </p>
                <p>
                    Las categorías te permiten organizar los libros por secciones como Novedades, Clásicos, Infantil, etc.
                </p>
            </field>
        </record>

        <!-- ===================== -->
        <!-- MENÚ                  -->
        <!-- ===================== -->
        <!-- Menú Categorías (directo bajo el raíz) -->
        <menuitem id="menu_categoria"
                  name="Categorías"
                  parent="menu_biblioteca_root"
                  action="action_categoria"
                  sequence="40"/>

    </data>
</odoo>
