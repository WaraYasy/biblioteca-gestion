<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ===================== -->
        <!-- VISTA ÁRBOL (TREE)    -->
        <!-- ===================== -->
        <record id="view_libro_tree" model="ir.ui.view">
            <field name="name">libro.libro.tree</field>
            <field name="model">libro.libro</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="titulo"/>
                    <field name="autor_id"/>
                    <field name="isbn"/>
                    <field name="genero"/>
                    <field name="editorial"/>
                    <field name="categoria_id"/>
                    <field name="valoracion" widget="progressbar"/>
                    <field name="disponible"/>
                </tree>
            </field>
        </record>

        <!-- ===================== -->
        <!-- VISTA FORMULARIO      -->
        <!-- ===================== -->
        <record id="view_libro_form" model="ir.ui.view">
            <field name="name">libro.libro.form</field>
            <field name="model">libro.libro</field>
            <field name="arch" type="xml">
                <form string="Libro">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="titulo" placeholder="Título del libro"/>
                            </h1>
                            <h3>
                                <field name="autor_id" placeholder="Autor" options="{'no_create': True}"/>
                            </h3>
                        </div>
                        <group>
                            <group string="Información General">
                                <field name="isbn"/>
                                <field name="editorial"/>
                                <field name="fecha_publicacion"/>
                                <field name="paginas"/>
                            </group>
                            <group string="Clasificación">
                                <field name="genero"/>
                                <field name="categoria_id"/>
                            </group>
                        </group>
                        <group>
                            <group string="Valoración">
                                <field name="valoracion" widget="progressbar"/>
                                <field name="nivel_valoracion"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sinopsis">
                                <field name="sinopsis" placeholder="Resumen del libro..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ===================== -->
        <!-- VISTA KANBAN          -->
        <!-- ===================== -->
        <record id="view_libro_kanban" model="ir.ui.view">
            <field name="name">libro.libro.kanban</field>
            <field name="model">libro.libro</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="titulo"/>
                    <field name="autor_id"/>
                    <field name="disponible"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.disponible.raw_value ? 'border-start border-success border-4' : 'border-start border-danger border-4'}"
                                 style="min-height: 180px;">
                                <div class="oe_kanban_content d-flex flex-column h-100">
                                    <!-- Portada placeholder -->
                                    <div class="text-center py-3"
                                         t-attf-style="background-color: #{record.disponible.raw_value ? '#d4edda' : '#f8d7da'};">
                                        <i class="fa fa-book fa-4x"
                                           t-attf-style="color: #{record.disponible.raw_value ? '#28a745' : '#dc3545'};"/>
                                    </div>
                                    <!-- Información del libro -->
                                    <div class="p-2 flex-grow-1">
                                        <div class="o_kanban_record_title fw-bold text-truncate">
                                            <field name="titulo"/>
                                        </div>
                                        <div class="text-muted small">
                                            <i class="fa fa-user"/> <field name="autor_id"/>
                                        </div>
                                    </div>
                                    <!-- Estado -->
                                    <div class="p-2 text-center">
                                        <span t-if="record.disponible.raw_value"
                                              class="badge bg-success w-100">
                                            <i class="fa fa-check"/> Disponible
                                        </span>
                                        <span t-else=""
                                              class="badge bg-danger w-100">
                                            <i class="fa fa-times"/> No disponible
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ===================== -->
        <!-- VISTA BÚSQUEDA        -->
        <!-- ===================== -->
        <record id="view_libro_search" model="ir.ui.view">
            <field name="name">libro.libro.search</field>
            <field name="model">libro.libro</field>
            <field name="arch" type="xml">
                <search string="Buscar Libros">
                    <!-- Campos de búsqueda -->
                    <field name="titulo"/>
                    <field name="autor_id"/>
                    <field name="isbn"/>
                    <field name="genero"/>
                    <field name="editorial"/>

                    <!-- Filtros personalizados -->
                    <filter string="Libros Disponibles"
                            name="filter_disponibles"
                            domain="[('disponible', '=', True)]"
                            icon="fa-check-circle"/>

                    <filter string="Libros Destacados"
                            name="filter_destacados"
                            domain="[('valoracion', '>', 9.0)]"
                            icon="fa-star"/>

                    <filter string="No Disponibles"
                            name="filter_no_disponibles"
                            domain="[('disponible', '=', False)]"
                            icon="fa-times-circle"/>

                    <separator/>

                    <!-- Agrupar por -->
                    <group expand="0" string="Agrupar por">
                        <filter string="Autor" name="group_autor" context="{'group_by': 'autor_id'}"/>
                        <filter string="Género" name="group_genero" context="{'group_by': 'genero'}"/>
                        <filter string="Zona" name="group_zona" context="{'group_by': 'categoria_id'}"/>
                        <filter string="Disponibilidad" name="group_disponible" context="{'group_by': 'disponible'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ===================== -->
        <!-- ACCIÓN                -->
        <!-- ===================== -->
        <record id="action_libro" model="ir.actions.act_window">
            <field name="name">Libros</field>
            <field name="res_model">libro.libro</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Añade tu primer libro
                </p>
                <p>
                    Gestiona el catálogo de libros de la biblioteca.
                </p>
            </field>
        </record>

        <!-- ===================== -->
        <!-- MENÚ                  -->
        <!-- ===================== -->
        <!-- Menú Libros (directo bajo el raíz) -->
        <menuitem id="menu_libro"
                  name="Libros"
                  parent="menu_biblioteca_root"
                  action="action_libro"
                  sequence="10"/>

    </data>
</odoo>
