<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ===================== -->
        <!-- VISTA ÁRBOL (TREE)    -->
        <!-- ===================== -->
        <record id="view_libro_tree" model="ir.ui.view">
            <field name="name">libro.libro.tree</field>
            <field name="model">libro.libro</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="titulo"/>
                    <field name="autor_id"/>
                    <field name="isbn"/>
                    <field name="genero"/>
                    <field name="editorial"/>
                    <field name="categoria_id"/>
                    <field name="valoracion" widget="progressbar"/>
                    <field name="disponible"/>
                </tree>
            </field>
        </record>

        <!-- ===================== -->
        <!-- VISTA FORMULARIO      -->
        <!-- ===================== -->
        <record id="view_libro_form" model="ir.ui.view">
            <field name="name">libro.libro.form</field>
            <field name="model">libro.libro</field>
            <field name="arch" type="xml">
                <form string="Libro">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="titulo" placeholder="Título del libro"/>
                            </h1>
                            <h3>
                                <field name="autor_id" placeholder="Autor" options="{'no_create': True}"/>
                            </h3>
                        </div>
                        <group>
                            <group string="Información General">
                                <field name="isbn"/>
                                <field name="editorial"/>
                                <field name="fecha_publicacion"/>
                                <field name="paginas"/>
                            </group>
                            <group string="Clasificación">
                                <field name="genero"/>
                                <field name="categoria_id"/>
                            </group>
                        </group>
                        <group>
                            <group string="Valoración">
                                <field name="valoracion" widget="progressbar"/>
                                <field name="nivel_valoracion"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sinopsis">
                                <field name="sinopsis" placeholder="Resumen del libro..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ===================== -->
        <!-- VISTA KANBAN          -->
        <!-- ===================== -->
        <record id="view_libro_kanban" model="ir.ui.view">
            <field name="name">libro.libro.kanban</field>
            <field name="model">libro.libro</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="titulo"/>
                    <field name="autor_id"/>
                    <field name="genero"/>
                    <field name="valoracion"/>
                    <field name="disponible"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <strong><field name="titulo"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <field name="autor_id"/>
                                    </div>
                                    <div class="mt-1">
                                        <span class="badge bg-secondary">
                                            <field name="genero"/>
                                        </span>
                                        <span t-if="record.disponible.raw_value" class="badge bg-success">
                                            Disponible
                                        </span>
                                        <span t-else="" class="badge bg-danger">
                                            No disponible
                                        </span>
                                    </div>
                                    <div class="mt-2">
                                        <field name="valoracion" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ===================== -->
        <!-- ACCIÓN                -->
        <!-- ===================== -->
        <record id="action_libro" model="ir.actions.act_window">
            <field name="name">Libros</field>
            <field name="res_model">libro.libro</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Añade tu primer libro
                </p>
                <p>
                    Gestiona el catálogo de libros de la biblioteca.
                </p>
            </field>
        </record>

        <!-- ===================== -->
        <!-- MENÚ                  -->
        <!-- ===================== -->
        <!-- Menú Libros (directo bajo el raíz) -->
        <menuitem id="menu_libro"
                  name="Libros"
                  parent="menu_biblioteca_root"
                  action="action_libro"
                  sequence="10"/>

    </data>
</odoo>
